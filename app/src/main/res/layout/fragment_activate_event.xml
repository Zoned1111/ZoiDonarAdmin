<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activateEvent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:text="Event Status \nActivation Panel"
        android:textColor="#5A5A5A"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hiddenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="offline"
                android:textColor="#FFFF0000"
                android:textSize="25sp" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/eventStatusChecker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="48dp"
                android:minHeight="48dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:paddingStart="45dp"
        android:textColorHint="#FF0000"
        android:drawableTint="#FF0000"
        android:drawableStart="@drawable/ic_app"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/regular"
    android:paddingStart="45dp"
    android:textColorHint="#FF0000"
    android:drawableTint="#FF0000"
    android:hint="offline \n- to disable donor form\n- to enable add event panel" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:paddingStart="45dp"
        android:textColorHint="#FF0000"
        android:drawableTint="#FF0000"
        android:hint="live \n- to enable donor form\n- to disable add event panel" />
</LinearLayout>